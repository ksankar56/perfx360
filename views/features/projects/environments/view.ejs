<div class="row">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-head">
                <div class="card-header">
                    <h4 class="card-title">&nbsp;</h4>
                    <a class="heading-elements-toggle"><i class="icon-ellipsis font-medium-3"></i></a>
                    <div class="heading-elements">
                        <button class="btn btn-primary btn-sm process-page" data-url="/environment/create" data-method="GET" data-title="Add Environment"><i class="icon-plus4 white"></i> Add Environment</button>
                    </div>
                </div>
            </div>
            <div class="card-body collapse in">
                <div class="card-block">

                    <% if (locals.params.environments && locals.params.environments.length > 0) {
                        var environments = locals.params.environments;
                    %>
                    <!-- Task List table -->
                        <table id="users-contacts" class="table table-white-space table-bordered row-grouping display table-responsive no-wrap icheck table-middle">
                            <thead>
                            <tr>
                                <th></th>
                                <th>Name</th>
                                <th>URL</th>
                                <th>Created Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%
                            for(var i=0; i < environments.length; i++) {
                                var environment = environments[i];
                            %>

                            <tr>
                                <td><input type="checkbox" class="input-chk"></td>
                                <td>
                                    <div class="media">
                                        <div class="media-body media-middle">
                                            <a href="#" class="media-heading"><%= environment.name %></a>
                                            <p class="text-muted"><%= environment.description %></p>
                                        </div>
                                    </div>
                                </td>
                                <td><%= environment.protocol %>://<%= environment.host %>:<%= environment.port %><%= environment.context %></td>
                                <td class="text-xs-center">
                                    <%= locals.params.moment(environment.created).format( 'MMM-DD-YYYY') %>
                                </td>
                                <td><span class="tag tag-default tag-success"><%= (environment.status) ? 'Active' : 'In Active' %></span></td>
                                <td>
                                    <div class="" role="group" aria-label="First Group">
                                        <button type="button" class="btn btn-icon btn-success"><i class="icon-eye"></i></button>
                                        <button type="button" class="btn btn-icon btn-info process-page" data-url="/environment/edit/<%= environment._id %>" data-method="GET" data-title="Edit Environment"><i class="icon-pen3"></i></button>
                                        <button type="button" class="btn btn-icon btn-danger cancel-button"><i class="icon-trash4"></i></button>
                                    </div>
                                </td>
                            </tr>

                            <% } %>

                            </tbody>
                            <tfoot>
                            <tr>
                                <th></th>
                                <th>Name</th>
                                <th>URL</th>
                                <th>Created Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                            </tfoot>
                        </table>
                    <script src="/app-assets/js/scripts/pages/dt-list.js" type="text/javascript"></script>
                    <% } else { %>
                    <div class="alert alert-info no-border alert-dismissible fade in mb-2" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        </button>
                        <h4 class="alert-heading mb-2">No Enviromnets available!</h4>
                        <p>Click add test to create a new environment.</p>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>