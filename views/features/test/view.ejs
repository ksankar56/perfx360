<div class="card-block">
<div class="row">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-head">
                <div class="card-header">
                    <h4 class="card-title">&nbsp;</h4>
                    <a class="heading-elements-toggle"><i class="icon-ellipsis font-medium-3"></i></a>
                    <div class="heading-elements">
                        <button class="btn btn-primary btn-sm process-page" data-url="/test/create/<%= req.session.project._id %>" data-method="GET" data-title="Add Test" data-formrepeater="true"><i class="icon-plus4 white"></i> Add Test</button>
                    </div>
                </div>
            </div>
            <div class="card-body collapse in">
                <div class="card-block">
                    <!-- Task List table -->
                    <% console.info('tests = ' , locals.params.tests);
                    if(locals.params.tests && locals.params.tests.length > 0) {
                        var tests = locals.params.tests;
                    %>
                    <table id="test-list" class="table table-white-space table-bordered row-grouping display table-responsive no-wrap table-middle">
                        <thead>
                        <tr>
                            <th></th>
                            <th>Name</th>
                            <th>Created Date</th>
                            <th>Environment</th>
                            <th>Type</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        <%
                        for(var i=0; i < tests.length; i++) {
                            var test = tests[i];
                        %>
                            <tr>
                                <td><input type="checkbox" class="input-chk"></td>
                                <td>
                                    <div class="media">
                                        <div class="media-body media-middle">
                                            <a href="project-view.html" class="media-heading"><%= test.name %></a>
                                            <p class="text-muted"><%= test.description %>.</p>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-xs-center">
                                    <%= locals.params.moment(test.created).format( 'MMM-DD-YYYY') %>
                                </td>
                                <td><%= test.environment.name %></td>
                                <td>REST JSON</td>
                                <!--<td><button class="btn btn-danger btn-min-width mr-1 ladda-button" data-style="slide-left"><span class="ladda-label"><i class="icon-android-checkbox-outline"></i> Execute</span></button></td>-->
                                <td>
                                    <div class="" role="group" aria-label="First Group">
                                        <button type="button" class="btn btn-icon btn-success"><i class="icon-eye"></i></button>
                                        <button type="button" class="btn btn-icon btn-info"><i class="icon-pen3"></i></button>
                                        <button type="button" class="btn btn-icon btn-danger"><i class="icon-trash4"></i></button>
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                        </tbody>
                        <tfoot>
                        <tr>
                            <th></th>
                            <th>Name</th>
                            <th>Created Date</th>
                            <th>Environment</th>
                            <th>Type</th>
                            <th>Actions</th>
                        </tr>
                        </tfoot>
                    </table>
                    <script src="/app-assets/js/scripts/pages/dt-list.js" type="text/javascript"></script>
                    <% } else { %>
                    <div class="alert alert-info no-border alert-dismissible fade in mb-2" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        </button>
                        <h4 class="alert-heading mb-2">No Tests available!</h4>
                        <p>Click add test to create a new test.</p>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12 text-xs-right">
        <button type="button" class="btn btn-warning mr-1 side-panel-trigger">
            <i class="icon-cross2"></i> Cancel
        </button>
    </div>
</div>
</div>
