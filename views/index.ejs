<div class="content-wrapper">

    <div class="row">
        <div class="col-xs-12 right">
            <div class="form-group">
                <div class="btn-group pull-right" role="group" aria-label="Basic example">
                    <!-- Button group with icons -->
                    <button class="btn btn-secondary btn-sm side-panel-trigger process-page" data-url="/project" data-method="GET" data-title="Create Project"><i class="icon-plus4 red"></i> Add
                        Project
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 right">
            <div class="content-body"><!-- Minimal statistics section start -->

                <!--<div class="circle" id="circle">
                    <button id="blue">blue</button>
                </div>-->
                <!-- stats with subtitle section start -->
                <section id="stats-subtitle">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card overflow-hidden">
                                <div class="card-body">
                                    <div class="card-block cleartfix">
                                        <h4>Projects</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <!--<div class="col-xl-12 col-md-12">
                            <div class="card overflow-hidden">
                                <div class="card-body">
                                    <div class="card-block cleartfix">
                                        <div class="media">
                                            <div class="media-left media-middle">
                                                <i class="icon-trending_up pink font-large-2 mr-2"></i>
                                            </div>
                                            <div class="media-body">
                                                <h4>BroadCast</h4>
                                                <span id="broadcast"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>-->
                        <% if (locals.projects && locals.projects.length > 0) {
                            for(var i=0; i < locals.projects.length; i++) {
                            var project = locals.projects[i];
                        %>
                            <div class="col-xl-6 col-md-12">
                                <div class="card overflow-hidden">
                                    <div class="card-body">
                                        <div class="card-block cleartfix">
                                            <div class="media">
                                                <div class="media-left media-middle">
                                                    <i class="icon-trending_up pink font-large-2 mr-2"></i>
                                                </div>
                                                <div class="media-body">
                                                    <h4><%= project.name %></h4>
                                                    <span><%= project.description %></span>
                                                </div>
                                                <div class="btn-group-vertical pull-right">
                                                    <div class="" role="group" aria-label="First Group">
                                                        <button type="button" class="btn btn-success box-loading" data-destination="body" onclick="location.href='/project/details/<%= project._id %>';"><i class="icon-eye"></i> View</button>
                                                        <button type="button" class="btn btn-icon btn-info side-panel-trigger process-page" data-url="/project/edit/<%= project._id %>" data-method="GET" data-title="Edit Project"><i class="icon-pen3"></i> Edit</button>
                                                        <button type="button" class="btn btn-icon btn-danger cancel-button" data-url="/project/<%= project._id %>" data-project="<%= project._id %>" data-refreshurl="/auth/index" data-method="DELETE"><i class="icon-trash4"></i></button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <% } %>
                        <% } else { %>
                            <div class="col-md-12">
                                <div class="card overflow-hidden">
                                    <div class="card-body">
                                        <div class="card-block cleartfix">
                                            <div class="bs-callout-default callout-border-left callout-bordered mt-1 mb-1 p-1">
                                                <h3><strong>No Projects available<strong></h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </section>
            </div>
        </div>
    </div>